<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="pdsw.project.persistence.dao.mybatis.mappers.RoleMapper">
    
    <resultMap type='Role' id='RoleResult'>
          
        <id property='id' column='user_id'/> 
        
        <result property='Role' column='type'/>
    </resultMap>    

    <select id='getRole' resultMap='RoleResult'>
        SELECT
            R.user_id               as role_id,
            R.type                  as role_description
        FROM t_tipos as R
        WHERE user_id = #{role_id}
    </select>
    
    <select id='getRoles' resultMap='RoleResult'>
        SELECT
            R.user_id               as role_id,
            R.type                  as role_description
        FROM t_tipos as R
    </select>
    
</mapper>